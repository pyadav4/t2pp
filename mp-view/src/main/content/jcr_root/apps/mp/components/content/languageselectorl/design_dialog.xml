<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Language Selector CL"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <defaultlanguage
            jcr:primaryType="nt:unstructured"
            allowBlank="{Boolean}false"
            blankText="Please select default Language path"
            fieldDescription="Path to default language"
            fieldLabel="Default Language"
            name="./defaultlanguage"
            xtype="pathfield"/>
        <websiteroot
            jcr:primaryType="nt:unstructured"
            allowBlank="{Boolean}false"
            blankText="Please select website root path"
            fieldDescription="Path is used to extract languages, Website root path should follow hierarchy: country/language e.g.usa/en_us"
            fieldLabel="Select Website Root Path"
            name="./websiterootpath"
            xtype="pathfield"/>
    </items>
</jcr:root>
